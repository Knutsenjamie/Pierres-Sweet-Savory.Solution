@{
  Layout = "_Layout"; 
}

@model SweetSavory.Models.Treat

<div class="card">
    <div class="card-body">
        <h2>Treat Details</h2>

        <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
        <h3>@Html.DisplayNameFor(model => model.Description): @Html.DisplayFor(model => model.Description)</h3>


        @if (@Model.JoinIR.Count == 0)
        {
        <p>This treat is not associated with any flavors.</p>
        }
        else
        {
        <h3>This treat currently comes in these flavors (Or- they will at least soon be in development ðŸ˜…):</h3>
        <ul>
        @foreach (var join in Model.JoinIR)
            {
            <li>@join.Flavor.Name</li>
            @using (Html.BeginForm("DeleteFlavor", "Treats"))
            {
                @Html.Hidden("joinId", @join.FlavorTreatId)
                <input type="submit" value="Delete" />
            }
            }
        </ul>
        }
        <p>@Html.ActionLink("Add/suggest a new flavor", "AddFlavor", new { id = Model.TreatId })</p>
        <p>@Html.ActionLink("Back to Treats", "Index")</p>
        <p>@Html.ActionLink("Edit Treat", "Edit", new { id = Model.TreatId })</p>
        <p>@Html.ActionLink("Delete Treat", "Delete", new { id = Model.TreatId })</p>
    </div>
</div>