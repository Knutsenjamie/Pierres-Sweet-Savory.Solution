@{
    Layout = "_Layout";
}

@using SweetSavory.Models
@model IEnumerable<SweetSavory.Models.Treat>

<div class="card">
    <div class="card-body">
        <h3>Treats</h3>

        @if (Model.Any())
        {
            <ul>
            @foreach (Treat treat in Model)
                {
                <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
                }
            </ul>
        }
        else
        {
            <h3>There are no treats yet!</h3>
        }

        <p>@Html.ActionLink("Add/suggest new treats", "Create")</p>
    </div>
